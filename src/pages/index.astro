import Layout from '../layouts/Layout.astro';
const pageTitle = "welame's page";
---
<Layout pageTitle={pageTitle}>
    <figure class="image">
        <img width="200" height="200" alt="My icon" src="/myicon.jpg"/>
        <figcaption>icon:トア君(pop'n music)の自作ドット絵です。かわいいね～</figcaption>
